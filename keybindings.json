[
    // LAYOUT  ----------------------------------------------------------------
    // focus tab
    {
        "key": "ctrl+alt+right",
        "command": "workbench.action.nextEditorInGroup"
    },
    {
        "key": "ctrl+alt+left",
        "command": "workbench.action.previousEditorInGroup"
    },
    // move tab
    {
        "key": "ctrl+shift+alt+right",
        "command": "workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "ctrl+shift+alt+left",
        "command": "workbench.action.moveEditorLeftInGroup"
    },
    // move tab to group
    {
        "key": "ctrl+alt+enter ctrl+alt+]",
        "command": "workbench.action.moveEditorToNextGroup"
    },
    {
        "key": "ctrl+alt+enter ctrl+alt+[",
        "command": "workbench.action.moveEditorToPreviousGroup"
    },
    // focus group
    {
        "key": "ctrl+alt+]",
        "command": "workbench.action.focusNextGroup"
    },
    {
        "key": "ctrl+alt+[",
        "command": "workbench.action.focusPreviousGroup"
    },
    // move group
    {
        "key": "ctrl+shift+alt+]",
        "command": "workbench.action.moveActiveEditorGroupRight"
    },
    {
        "key": "ctrl+shift+alt+[",
        "command": "workbench.action.moveActiveEditorGroupLeft"
    },
    // toggle maximize group
    {
        "key": "ctrl+alt+L",
        "command": "workbench.action.toggleMaximizeEditorGroup"
    },
    // change group width
    {
        "key": "ctrl+alt+-",
        "command": "workbench.action.decreaseViewWidth"
    },
    {
        "key": "ctrl+alt+=",
        "command": "workbench.action.increaseViewWidth"
    },
    // toggle terminal, console
    {
        "key": "ctrl+alt+.",
        "command": "workbench.action.positronConsole.open",
    },
    {
        "key": "ctrl+alt+/",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },
    // ACTION -----------------------------------------------------------------
    // run line
    {
        "key": "cmd+enter",
        "command": "workbench.action.positronConsole.executeCode",
        "when": "editorTextFocus && !notebookEditorFocused && !positronNotebookCellEditorFocused"
    },
    // format
    {
        "key": "cmd+d",
        "command": "editor.action.formatSelection",
        "when": "editorHasDocumentSelectionFormattingProvider && editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+d",
        "command": "editor.action.formatDocument",
        "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
    },
    {
        "key": "cmd+d",
        "command": "editor.action.formatDocument.none",
        "when": "editorTextFocus && !editorHasDocumentFormattingProvider && !editorReadonly"
    },
    // select
    {
        "key": "ctrl+shift+up",
        "command": "editor.action.smartSelect.expand",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+down",
        "command": "editor.action.smartSelect.shrink",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+right",
        "command": "expandLineSelection",
        "when": "textInputFocus"
    },
    // EDITOR -------------------------------------------------------------------
    // delete line
    {
        "key": "cmd+shift+backspace",
        "command": "editor.action.deleteLines"
    },
    // insert line above/below
    {
        "key": "alt+up",
        "command": "editor.action.insertLineBefore",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+down",
        "command": "editor.action.insertLineAfter",
        "when": "editorTextFocus && !editorReadonly"
    },
    // move line above/below
    {
        "key": "cmd+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    // add cursor above/below
    {
        "key": "shift+alt+up",
        "command": "editor.action.insertCursorAbove",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+down",
        "command": "editor.action.insertCursorBelow",
        "when": "editorTextFocus"
    },
    // copy line above/below
    {
        "key": "shift+cmd+up",
        "command": "editor.action.copyLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "shift+cmd+down",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    // remove brackets
    {
        "key": "alt+cmd+backspace",
        "command": "-editor.action.removeBrackets",
        "when": "editorTextFocus"
    },
    // LANG R -----------------------------------------------------------------
    // insert <-
    {
        "key": "shift+cmd+-",
        "command": "r.insertLeftAssignment",
        "when": "editorTextFocus && editorLangId == 'r' || editorTextFocus && quarto.document.languageId == 'r'"
    },
    {
        "key": "shift+cmd+-",
        "command": "r.insertLeftAssignmentConsole",
        "when": "positronConsoleFocused && editorLangId == 'r'"
    },
    // insert |>
    {
        "key": "shift+cmd+m",
        "command": "r.insertPipe",
        "when": "editorTextFocus && editorLangId == 'r' || editorTextFocus && quarto.document.languageId == 'r'"
    },
    {
        "key": "shift+cmd+m",
        "command": "r.insertPipe",
        "when": "editorTextFocus && editorLangId == 'r' || editorTextFocus && quarto.document.languageId == 'r'"
    },
    // insert section
    {
        "key": "cmd+i cmd+s",
        "command": "r.insertSection",
        "when": "editorLangId == 'r'"
    },
    // REMOVE CLUTTER ---------------------------------------------------------
    {
        "key": "ctrl+enter",
        "command": "-workbench.action.positronConsole.executeCode",
        "when": "editorTextFocus && !notebookEditorFocused && !positronNotebookCellEditorFocused"
    },
    {
        "key": "alt+cmd+end",
        "command": "-workbench.action.positronConsole.executeCodeAfterCursor",
        "when": "positronConsoleFocused || editorTextFocus && !notebookEditorFocused && !positronNotebookCellEditorFocused"
    },
    {
        "key": "cmd+] cmd+backspace",
        "command": "editor.action.removeBrackets",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+-",
        "command": "-r.insertLeftAssignmentConsole",
        "when": "positronConsoleFocused && editorLangId == 'r'"
    },
    {
        "key": "alt+-",
        "command": "-r.insertLeftAssignment",
        "when": "editorTextFocus && editorLangId == 'r' || editorTextFocus && quarto.document.languageId == 'r'"
    },
    {
        "key": "shift+cmd+t",
        "command": "-r.packageTestExplorer",
        "when": "isRPackage"
    },
    {
        "key": "shift+cmd+b",
        "command": "-r.packageInstall",
        "when": "isRPackage"
    },
    {
        "key": "shift+cmd+l",
        "command": "-r.packageLoad",
        "when": "isRPackage"
    },
    {
        "key": "shift+cmd+e",
        "command": "-r.packageCheck",
        "when": "isRPackage"
    },
    {
        "key": "shift+cmd+d",
        "command": "-r.packageDocument",
        "when": "isRPackage"
    },
    {
        "key": "cmd+k h",
        "command": "-r.insertSection",
        "when": "editorLangId == 'r'"
    },
    {
        "key": "shift+cmd+-",
        "command": "-workbench.action.zoomOut"
    },
    {
        "key": "alt+cmd+home",
        "command": "-workbench.action.positronConsole.executeCodeBeforeCursor",
        "when": "positronConsoleFocused || editorTextFocus && !notebookEditorFocused && !positronNotebookCellEditorFocused"
    },
    {
        "key": "ctrl+alt+right",
        "command": "-quickInput.acceptInBackground",
        "when": "cursorAtEndOfQuickInputBox && inQuickInput && quickInputType == 'quickPick' || inQuickInput && !inputFocus && quickInputType == 'quickPick'"
    },
    {
        "key": "cmd+k alt+cmd+right",
        "command": "-workbench.action.nextEditorInGroup"
    },
    {
        "key": "cmd+k alt+cmd+left",
        "command": "-workbench.action.previousEditorInGroup"
    },
    {
        "key": "ctrl+alt+left",
        "command": "-cursorWordPartLeft",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+alt+right",
        "command": "-cursorWordPartRight",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+alt+right",
        "command": "-cursorWordPartRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+alt+left",
        "command": "-cursorWordPartLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+cmd+right",
        "command": "-workbench.action.moveEditorToNextGroup"
    },
    {
        "key": "ctrl+cmd+left",
        "command": "-workbench.action.moveEditorToPreviousGroup"
    },
    {
        "key": "shift+cmd+[",
        "command": "-workbench.action.previousEditor"
    },
    {
        "key": "shift+cmd+[",
        "command": "-workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "shift+cmd+[",
        "command": "-workbench.action.debug.prevConsole",
        "when": "inDebugRepl"
    },
    {
        "key": "cmd+k shift+cmd+right",
        "command": "-workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "cmd+k shift+cmd+left",
        "command": "-workbench.action.moveEditorLeftInGroup"
    },
    {
        "key": "ctrl+shift+alt+[",
        "command": "-jupyter.extendSelectionByCellAbove",
        "when": "editorTextFocus && jupyter.hascodecells && !jupyter.webExtension && !notebookEditorFocused"
    },
    {
        "key": "ctrl+shift+alt+]",
        "command": "-jupyter.extendSelectionByCellBelow",
        "when": "editorTextFocus && jupyter.hascodecells && !jupyter.webExtension && !notebookEditorFocused"
    },
    {
        "key": "cmd+k right",
        "command": "-workbench.action.moveActiveEditorGroupRight"
    },
    {
        "key": "cmd+k left",
        "command": "-workbench.action.moveActiveEditorGroupLeft"
    },
    {
        "key": "shift+cmd+k",
        "command": "-editor.action.deleteLines",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "shift+cmd+enter",
        "command": "-editor.action.insertLineBefore",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+enter",
        "command": "-editor.action.insertLineAfter",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+enter",
        "command": "-editor.action.insertLineAfter",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+k cmd+m",
        "command": "-workbench.action.toggleMaximizeEditorGroup",
        "when": "editorPartMaximizedEditorGroup || editorPartMultipleEditorGroups"
    },
    {
        "key": "alt+up",
        "command": "-editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+down",
        "command": "-editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "shift+alt+down",
        "command": "-editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+cmd+right",
        "command": "-editor.action.smartSelect.expand",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+up",
        "command": "-editor.action.copyLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+cmd+up",
        "command": "-editor.action.insertCursorAbove",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+cmd+down",
        "command": "-editor.action.insertCursorBelow",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+f",
        "command": "-editor.action.formatDocument",
        "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
    },
    {
        "key": "shift+alt+f",
        "command": "-editor.action.formatDocument.none",
        "when": "editorTextFocus && !editorHasDocumentFormattingProvider && !editorReadonly"
    },
    {
        "key": "cmd+k cmd+f",
        "command": "-editor.action.formatSelection",
        "when": "editorHasDocumentSelectionFormattingProvider && editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+`",
        "command": "-workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },
    {
        "key": "cmd+\\",
        "command": "-workbench.action.terminal.split",
        "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
    },
    {
        "key": "cmd+\\",
        "command": "-workbench.action.splitEditor"
    },
    {
        "key": "cmd+\\",
        "command": "-workbench.action.terminal.splitActiveTab",
        "when": "terminalProcessSupported && terminalTabsFocus"
    },
    {
        "key": "ctrl+shift+right",
        "command": "-editor.action.smartSelect.expand",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+cmd+left",
        "command": "-editor.action.smartSelect.shrink",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+left",
        "command": "-editor.action.smartSelect.shrink",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+s",
        "command": "-issue.createIssueFromFile",
        "when": "!issues.creatingFromFile && resourceScheme == 'newIssue' && config.files.autoSave != 'off'"
    },
]